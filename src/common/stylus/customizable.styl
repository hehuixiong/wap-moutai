.customizable {
  .customizable-wrap1,
  .customizable-wrap2,
  .customizable-wrap3,
  .customizable-wrap4{
    display: none;
  }
  .customizable-wrap1.on,
  .customizable-wrap2.on,
  .customizable-wrap3.on,
  .customizable-wrap4.on{
    display: block;
  }
  .customizable-title {
    height: 1.64rem;

    img {
      width: 100%;
    }
  }

  .customizable-wrap {
    padding-bottom: 0.88rem;

    .wrap-head {
      height: 1.8rem;
      padding: 0 0.2rem;

      .title {
        font-weight: 900;
        line-height: 0.7rem;
        font-size: 0.32rem;
        color: #333;
      }

      .content {
        font-size: 0.26rem;
        line-height: 0.34rem;
        color: #333;
      }
    }

    .wrap-img {
      height: 7.1rem;
      position: relative;

      .cust_bg {
        width: 100%;
        position: relative;
        z-index: 1;
      }

      .img2 {
        position: absolute;
        left: 2.96rem;
        top: 5rem;
        width: 1.6rem;
      }
      .page2_img{
        width 2.32rem;
        height 2.32rem;
        position: absolute
        left 2.48rem;
        top 3.28rem;
      }
    }

    .wrap-option {
      .option-title {
        display: flex;
        background: #a87e41;
        height: 0.6rem;

        .tab {
          text-align: center;
          color: #fff;
          width: 33.333%;
          height: 100%;

          span {
            display: inline-block;
            padding-top: 0.16rem;
          }
        }

        .tab.active-bg {
          span {
            width: 80%;
            padding-top: 0.12rem;
            background: #fff;
            color: #ff2d2d;
            height: 0.6rem;
          }
        }
      }

      .option-select {
        height: 3.2rem;
        background: #fff;

        .list.template {
          padding: 0.32rem 0.1rem;

          .list-item {
            height: 0.7rem;

            .item-text {
              width: 90%;
              height: 100%;
              line-height: 0.7rem;
            }
          }
        }

        .list {
          padding: 0.32rem 0.16rem;
          display: flex;
          flex-wrap: wrap;

          .list-item {
            width: 25%;
            text-align: center;
            height: 0.6rem;
            margin-bottom: 0.15rem;

            .item-text {
              display: inline-block;
              line-height: 0.6rem;
              background: #fff;
              width: 80%;
              height: 100%;
              border: #aaa solid 1px;
              box-shadow: 0px 0px 2px 1px #aaa;
            }
          }

          .list-item.active-red {
            .item-text {
              border: #d8000b solid 1px;
               box-shadow: 0px 0px 2px 1px #d8000b;
              position: relative;
            }

            .item-text:after {
              position: absolute;
              content: '';
              display: block;
              bottom: 0;
              right: 0;
              background: url('../../components/customizable/g.png') no-repeat;
              width: 0.378rem;
              height: 0.28rem;
              background-size: 0.378rem 0.28rem;
            }
          }
        }
      }

      .option-count {
        height: 3.8rem;
        background: #efefef;
        padding: 0.6rem 0;

        .list {
          background: #fff;
          width: 75vw;
          height: 2.6rem;
          margin: 0 auto;
          padding-left: 0.72rem;

          .list-item {
            line-height: 0.88rem;
            p{
              display: inline-block;
              font-size: 0;
              button {
                width: .5rem;
                height: .4rem;
                border: none;
                background #686868;
                color: #fff;
              }
              button:nth-child(2){
                width: 1rem;
                background #fff;
                color: #000;
                border-top: #686868 1px solid ;
                border-bottom: #686868 1px solid ;
              }
            }
            .price,.total{
             color: #dd202a;
             font-size: .32rem;
             font-weight: 600;
            }

          }
        }
      }
    }

    .wrap-step.move-head {
      right: -70vw !important;
    }

    .wrap-step {
      height: 0.88rem;
      position: fixed;
      background: #fff;
      right: 0;
      bottom: 0;
      width: 100vw;
      display: flex;
      transition: all 0.2s ease-in-out;
      z-index: 999;

      .btn:nth-child(1) {
        background: #d4d4d4;
        color: #666;
      }

      .btn {
        font-size: 0.32rem;
        flex: 1;
        border-radius: 0;
        border: none;
        background: #d8000b;
        color: #fff;
      }
    }
  }

  .customizable-wrap2, .customizable-wrap3 {
    .customizable-wrap {
      .wrap-option {
        .option-select {
          height: 4.4rem;

          .select-upload {
            padding: 0 0.26rem;

            .select-wrap {
              margin: 0;
              padding: 0.32rem 0;
            }

            .select-form {
              margin: 0;
              padding: 0.12rem 0;

              .input-upload {
                display: none;
              }

              .select-img {
                display: inline-block;
                height: 1.06rem;
                width: 1.06rem;
                margin: 0;
                position: relative;
                background: #efefef;
                border: #eaeaea 1px solid ;
                img {
                  background-color: #fff;
                  border: 1px solid #e0e0e0;
                  box-sizing: border-box;
                  height: 1.06rem;
                  width: 1.06rem;
                  pointer-events: none;
                  position: relative;
                  z-index: 9;
                }

                .icon-camera {
                  background: transparent url('../../components/customizable/icon-camera.png') 50% no-repeat;
                  background-color: transparent;
                  background-size: 0.3rem;
                  display: inline-block;
                  height: 0.3rem;
                  width: 0.3rem;
                  vertical-align: middle;
                  transition: all 0.4s;
                  background-color: #fff;
                  border-radius: 50%;
                  padding: 0.21rem;
                  position: absolute;
                  left: 50%;
                  top: 50%;
                  transform: translate3d(-50%, -50%, 0);
                  pointer-events: none;
                }
              }

              .select-text {
                display: inline-block;
                font-size: 0.24rem;
                color: red;
                vertical-align: top;
                padding-top .4rem;
                padding-left .06rem;
                p{
                  line-height 15px;
                }
              }
            }

            .require {
              height: 1.4rem;
              border: #ececec 1px solid;
              background: #f7f7f7;
              text-align: center;
              color: #6c6c6c;

              .require-title {
                line-height: 24px;
                font-size: 0.32rem;
              }

              .p1, .p2 {
                display: flex;
                line-height: 20px;
                font-size: .24rem;
                font-family: '宋体';
                span {
                  flex: 1;
                }
              }
            }
          }

          .list {
            .list-item {
              width: 33.33%;
            }
          }

          .font-set {
            padding: 0 0.4rem;
            font-size: 0;

            .set-text {
              font-size: 0.32rem;
              vertical-align: middle;
            }

            .set-num {
              width: 0.9rem;
              height: 0.44rem;
              border: 1px #808080 solid;
              font-size: 0.3rem;
              vertical-align: middle;
              margin-right: 0.3rem;
              text-align: center;
              line-height: 0.44rem;
            }

            .set-at {
              line-height: 0.44rem;
              font-size: 0.3rem;
              display: inline-block;
              border: 1px #808080 solid;
              height: 0.44rem;
              vertical-align: middle;
              padding: 0 0.12rem;
            }

            textarea {
              display: block;
              width: 6.68rem;
              height: 1.52rem;
              margin-top: 0.32rem;
              border: 1px #7f7f7f solid;
              font-size: 0.28rem;
              padding: .10rem;
              color: #555;
            }
          }
        }
      }
    }
  }
}